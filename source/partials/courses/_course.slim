//link to product by converting the title to a slug
.course
  = link_to '/course/' + course.title.parameterize + '/'
    .course-image
      = image_tag course.image
    .course-content
      .title
        h3 = course.title
      .price
        p 
          - currency = data.settings.units.currency || 'â‚¬' 
          = currency + course.price.to_s 
      .weight
        p 
          - weight = data.settings.units.weight || 'kg'
          = course.weight.to_s + weight
